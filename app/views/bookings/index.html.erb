<div class= "container-fluid">
  <div class="row title_bookings pt-5 pb-5">
    <h1>My Bookings </h1>
      <div class="pt-2 pb-5"></div>
      <button class="btn-primary">
        <%= link_to "Continue Shopping", outfits_path%>
      </button>
</div>

<div class= "container-fluid">
  <% if @bookings.count > 0 %>
    <% @bookings.each do |booking| %>
      <div class="card-product">
        <img class="outfit-picture" src='<%= booking.outfit.picture_url %>'>
          <div class="card-product-infos">
            <h5><strong><%= booking.outfit.title %></strong></h5>
            <p><%= booking.outfit.description %></p>
          </div>
          <div class="card-product-infos-dates">
              <h5><strong>Bookings dates:</strong></h5>
              <p>Start date: <%= booking.start_date %></p>
              <p>End date: <%= booking.end_date %></p>
          </div>
          <div class="card-product-infos-price">
          <h5><strong>Price:</strong></h5>
            <i class="material-icons mr-2">RS</i> <%=booking.outfit.price %>
          </div>
          <div class="card-product-infos-delete">
            <%= link_to booking, method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fa fa-trash fa-1x"></i>
          <% end %>
          </div>
        </div>
      <% end %>
     <% else %>
      <div class="body-white">
        <p> You didn't book any outfit</p>
      </div>
    <% end %>
   </div>
</div>

