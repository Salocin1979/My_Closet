
<div class="container mt-4">

  <div class="row">
    <div class="col-8">
      <div class="outfit-show-card">
        <h1><%= @outfits.title%></h1>
        <p class="outfit-show-address"><%= @outfits.category %></p>

       <!--<div class= outfit-picture style="background-image: url('<%= @outfits.picture_url %>')"></div> %>-->
       <img class="outfit-picture" src='<%= @outfits.picture_url %>'>
      </div>
      <div class="outfit-show-card">
        <h3>A bit more about this outfit...</h3>
        <p><%= @outfits.description %></p>
      </div>
    </div>

    <div class="col-4">
      <div class="outfit-show-card">
        <div class="container">
          <div class="form-wrapper">
            <h2>Book an outift</h2>
              <%= simple_form_for [@outfit, @booking] do |f| %>
                <%= f.input :start_date, label: "Select your dates:",
                               as: :string,
                               required: false,
                               input_html: { id: "range_start", class: "d-none"} %>
                <%= f.input :end_date, label: false,
                             as: :string,
                             required: false,
                             input_html: { id: "range_end", class: "d-none" } %>
                <%= f.button :submit, "Book", class: "btn btn-primary" %>
              <% end %>
          </div>
        </div>

        <%# <h5>Book this outfit!</h5> %>
        <%# <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="email" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="email" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form> %>

      <div class="outfit-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="material-icons mr-2">The outfit</i><span><%= @outfits.category %></span>
          </div>
          <div class="flex ml-3">
            <i class="material-icons mr-2">RS</i> <%= @outfits.price %>
          </div>
        </div>
      </div>
      <div class="outfit-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-instagram-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="booking-form-div" data-bookings="<%= @bookings_dates.to_json %>">

