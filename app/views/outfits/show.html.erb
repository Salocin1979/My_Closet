
<div class="container mt-4">

  <div class="row">
    <div class="col-6">
      <div class="outfit-show-card">
        <h1><%= @outfit.title%></h1>
        <p class="outfit-show-address"><%= @outfit.category %></p>
       <img class="outfit-picture" src='<%= @outfit.picture_url %>'>
      </div>
      <div class="outfit-show-card">
        <h3>A bit more about this outfit...</h3>
        <p><%= @outfit.description %></p>
      </div>
    </div>

    <div class="col-6">
      <div class="outfit-show-card">
        <div class="container">
          <div class="form-wrapper">
            <h2>Book this Outfit</h2>
            <div class="row">
              <%= simple_form_for [@outfit, @booking] do |f| %>
                <%= f.input :start_date, label: "SÃ©lectionnez vos dates:",
                               as: :string,
                               required: false,
                               input_html: { id: "range_start", class:"form-control", placeholder:"DD/MM/YYYY"} %>
                <%= f.input :end_date, label: false,
                             as: :string,
                             required: false,
                             input_html: { id: "range_end", class:"form-control", placeholder:"DD/MM/YYYY"} %>
                <%= f.button :submit, "Book", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="outfit-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <p>Price</p>
          </div>
          <div class="flex ml-3">
            <i class="material-icons mr-2">RS</i> <%= @outfit.price %>
          </div>
        </div>
      </div>
      <div class="outfit-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-instagram-square fa-2x mr-2"></i>
            <i class="fa fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="new_booking" data-bookings="<%= @bookings_dates.to_json %>"></div>

